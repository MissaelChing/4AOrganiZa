                        <div class="form-group">
                            <button type="submit" class="btn btn-success m-3">Agregar</button>
                        </div>
                    </div>
                </form>

                <iframe src="/ACalendario" frameborder="0" width="900" height="600"></iframe>
            </div>

        }
        else if (Model.escuela.ModoP == "Semestral")
        {
            <h3>Agregue dos fechas.</h3>
            

            <form class="mt-12" method="post">
                <div class="row">
                    <div class="col-md-12 text-right">
