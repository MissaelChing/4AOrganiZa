                        <label> </label>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success m-3">Agregar</button>
                        </div>
                    </div>
                </form>

                <iframe src="/ACalendario" frameborder="0" width="900" height="600"></iframe>
            </div>


        }
        else if (Model.escuela.ModoP == "Cuatrimestral")
        {
            <h3>Agregue tres fechas.</h3>
            <div class="row">

                <form class="mt-12" method="post">
                    <div class="col-md-12 text-right">
                        <div class="form-group">
                            <button type="submit" asp-page-handler="Volver" class="btn btn-danger m-3">Volver</button>
