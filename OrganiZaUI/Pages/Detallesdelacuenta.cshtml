@page
@model OrganiZaUI.Pages.DetallesdelacuentaModel
@{
}
<h1>Mi perfil</h1>

@if (@Model.Users.Rolusuario == "Tutor")
{


    <form class="mt-3" method="post">
        <div class="row">
            <div class="col-md-12">

                <input hidden asp-for="Tutor.Id" />
                <br>
                <br>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label>Nombre del Tutor</label>
                    <input type="text" asp-for="Tutor.NombreT" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Nombre del Alumno</label>
                    <input type="text" asp-for="Tutor.Alumno" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Tipo de cuenta</label>
                    <input type="text" asp-for="Tutor.Rolusuario" class="form-control" readonly>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <div class="form-group">
                    <button type="submit" class="btn btn-success m-3">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </form>
    <form class="mt-3" method="post">
        <div class="col-md-12 text-right">
            <div class="form-group">
                <button type="submit" asp-page-handler="Cerrar" class="btn btn-danger m-3">Cerrar Sesion</button>
            </div>
        </div>
    </form>
}
else
{
    <form class="mt-3" method="post">
        <div class="row">
            <div class="col-md-12">

                <input hidden asp-for="Administrador.Id" />
                <br>
                <br>
            </div>

        </div>

        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label>Nombre del Administrador</label>
                    <input type="text" asp-for="Administrador.NombreAd" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Tipo de cuenta</label>
                    <input type="text" asp-for="Administrador.Rolusuario" class="form-control" readonly>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <div class="form-group">
                    <button type="submit" class="btn btn-success m-3">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </form>
    <form class="mt-3" method="post">
        <div class="col-md-12 text-right">
            <div class="form-group">
                <button type="submit" asp-page-handler="Cerrar" class="btn btn-danger m-3">Cerrar Sesion</button>
            </div>
        </div>
    </form>

}
