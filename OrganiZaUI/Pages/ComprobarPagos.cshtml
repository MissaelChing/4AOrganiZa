@page
@model OrganiZaUI.Pages.ComprobarPagosModel
@{
}
@if (Model.Users.Rolusuario == null)
{
    RedirectToPage("/Error");
}
else
{
    <h1>Comprobar Pagos</h1>
    <br />
    <br />
    <br />
    <form method="post">
        @if (Model.Pago.Any())
        {


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().Id)</th>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().NombreT)</th>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().Alumno)</th>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().Mespagado)</th>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().Fecha)</th>
                        <th scope="col">@Html.DisplayNameFor(x => x.Pago.FirstOrDefault().voucher)</th>

                        <th scope="col">Verificar Documentos</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model.Pago)
                    {

                    <tr>
                        <td scope="row">@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.NombreT)</td>
                        <td>@Html.DisplayFor(m => item.Alumno)</td>
                        <th>@Html.DisplayFor(m => item.Mespagado)</th>
                        <th>@Html.DisplayFor(m => item.Fecha)</th>
                        <th>
                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Visualizar Voucher</button>

                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Visualizacion</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <img class="img-fluid" src="@Model.file1" alt="Image" style="max-height:240px; max-width:480px;" />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </th>
                        <td>
                            <a asp-page="/Detalles" asp-route-ID="@item.Id" class="btn btn-success">Aprobar</a>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="mx-auto text-center">
                <span class="text-danger">No se encontraron ningun registro</span>
            </div>
        }
    </form>
}